{% if request.path contains "qr_landing" %}
<style>
  /* General Styling */
  .qr-container {
    max-width: 400px;
    margin: 0 auto;
    text-align: center;
    font-family: 'Montserrat', sans-serif;
  }

  h2 {
    font-weight: 700;
    font-style: italic;
    letter-spacing: 0.5px;
    color: #000;
    margin-bottom: 10px;
  }

  p {
    font-size: 16px;
    color: #555;
    line-height: 1.5;
    margin: 10px 0 20px;
  }

  /* Progress Text Styling */
  .progress-text {
    font-size: 16px; 
    font-weight: 700; 
    color: #555; 
    margin-top: 20px; 
    font-family: 'Montserrat', sans-serif; 
    text-align: center; 
    display: flex;
    justify-content: center;
  }

  .qr-congrats {
    max-width: 400px;
    margin: 0 auto;
    text-align: center;
    font-family: 'Montserrat', sans-serif;
  }

  .qr-congrats h2 {
    font-family: 'Montserrat', sans-serif;
    font-weight: 700; 
    font-style: italic; 
    letter-spacing: 0.5px;
    color: #000;
    margin-bottom: 10px;
  }

  .qr-congrats p {
    font-size: 16px;
    color: #555;
    line-height: 1.5;
    margin: 5px 0 20px;
  }

  .qr-congrats .actions a {
    display: block;
    font-size: 16px;
    font-weight: bold;
    padding: 12px 0;
    margin: 10px auto;
    width: 260px; 
    border: 2px solid #000;
    text-decoration: none;
    text-align: center;
    border-radius: 5px;
  }

  .qr-congrats .btn-login {
    background-color: #000;
    color: #fff;
  }

  .qr-congrats .btn-create-account {
    background-color: #fff;
    color: #000;
  }

  .qr-congrats .additional-text {
    font-size: 12px;
    color: #777;
    margin-top: 10px;
    line-height: 1.4;
    margin-bottom: 5px; 
  }

  .qr-congrats .surprise-box {
    margin: 20px auto; 
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .qr-congrats .surprise-box dotlottie-player {
    width: 200px; 
    height: 200px;
  }
  
</style>

<div id="qr-congrats-container">
  <div class="qr-congrats">
    <h2>Congrats!</h2>
    <p>You're about to earn $20 with your new token.</p>
    <p>Let's get started! First, you need to log into your Larroudé account.</p>
    <div class="actions">
      <a href="/account/login" class="btn-login">LOGIN</a>
      <a href="/account/register" class="btn-create-account">CREATE ACCOUNT</a>
    </div>
    <p class="additional-text">*If you don’t have an account, that’s ok! <br>We’ll wait while you create one. ;)</p>
    <div class="surprise-box">
      <dotlottie-player 
        src="https://lottie.host/4780ff13-324d-48d5-9129-ebe8ecf4a8ea/ZWm1cedUXY.lottie" 
        background="transparent" 
        speed="1" 
        loop autoplay>
      </dotlottie-player>
    </div>
  </div>

  <!-- Only Progress Text -->
  <div class="progress-text">1/4</div>
</div>

<script src="https://unpkg.com/@dotlottie/player-component@2.7.12/dist/dotlottie-player.mjs" type="module"></script>
{% endif %}

{% schema %}
{
  "name": "Larroude QR PDP - Step 1",
  "target": "section",
  "javascript": "script.js",
  "settings": []
}
{% endschema %}
